@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100" style="width: 500px !important">
                <form class="login100-form validate-form" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <h4>Create a new account.</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <span class="login100-form-title p-b-26">
                        <img src="~/Images/LogoE.png" style="width:50%" />
                    </span>
                    <div class="wrap-input100 validate-input" data-validate="Valid username is: a@b.c">
                        <input asp-for="Input.UserName" class="input100" />
                        <span class="focus-input100" data-placeholder="Username"></span>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid email is: a@b.c">
                        <input asp-for="Input.Email" class="input100" />
                        <span class="focus-input100" data-placeholder="Email"></span>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid phonenumber is: a@b.c">
                        <input asp-for="Input.PhoneNumber" class="input100" />
                        <span class="focus-input100" data-placeholder="PhoneNumber"></span>
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid phonenumber is: a@b.c">
                        <input asp-for="Input.Password" class="input100" />
                        <span class="focus-input100" data-placeholder="Password"></span>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid phonenumber is: a@b.c">
                        <input asp-for="Input.ConfirmPassword" class="input100" />
                        <span class="focus-input100" data-placeholder="Re-Password"></span>
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="wrap-input100 validate-input" data-validate="Valid phonenumber is: a@b.c">
                        <span class="wrap-input100"></span>
                        <select asp-for="Input.Role" class="input100">
                            <option>Designer</option>
                            <option>Photographer</option>
                            <option>User</option>
                            <option>WeddingHall</option>
                        </select>
                    </div>
                    <div class="container-login100-form-btn">
                        <div class="wrap-login100-form-btn">
                            <div class="login100-form-bgbtn"></div>
                            <button class="login100-form-btn" type="submit">
                                Register
                            </button>
                        </div>
                    </div>
                </form>
            </div>
