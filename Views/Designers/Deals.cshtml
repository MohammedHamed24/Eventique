        </div>*@
        <!------------------------------------------------------------------End popup Section Hidden---------------------------------------------------------------------->

        <div id="colorlib-main">
            <section class="ftco-section contact-section">
                <div class="container">
                    <div class="row block-9">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Request ID</th>
                                    <th>Avatar</th>
                                    <th>Name</th>
                                    <th>Date</th>
                                    <th>Price</th>
                                    <th>Message</th>
                                    <th>Request Time</th>
                                    <th>Status</th>
                                    <th>Reply</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach (var item in Model.DesignerRequest)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>
                                                <div class="round-img">
                                                    <a href="#"><img class="rounded-circle" width="60" height="60" src="@item.RequestUser.ImagePath" alt=""></a>
                                                </div>
                                            </td>
                                            <td>@item.RequestUser.Name</td>
                                            <td>@item.Date</td>
                                            <td>@item.price()</td>
                                            <td>@item.Message</td>
                                            <td>@item.Time</td>
                                            <td>@item.Status</td>
                                            <td>
                                                <form method="post" action="~/Designers/AcceptDeal/@item.ID" >
                                                    <button type="submit" id="btnaccept" class="btn btn-success edit" onclick="disable()">
                                                        Accept
                                                    </button>
                                                </form>
                                                <form method="post" action="~/Designers/CancelDeal/@item.ID">
                                                    <button type="submit" id="btncancel" class="btn btn-danger" onclick="Enable()">
                                                        Cancel
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </section>
        </div>
        <script>
            const button = document.querySelector('#btnaccept')
            const button2 = document.querySelector('#btncancel')
            function disable() {
                button.style.visibility = "hidden";
                button2.style.visibility = "visible";
            }
            function Enable() {
                button.style.visibility = "visible";
                button2.style.visibility = "hidden";
            }
        </script>

    }
}
