@model Eventique.Models.WeddingHall
@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "EditWedd";
    Layout = "~/Views/Shared/_BackViewLayout.cshtml";
}

@section Styles{
    <link rel="stylesheet" href="~/Calendar/style.css">
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@3.9.0/dist/fullcalendar.min.css" rel="stylesheet" />

}
@if (SignInManager.IsSignedIn(User))
{
    if (User.Identity.Name != Model.Users.Email)
    {
        <div id="colorlib-main">
            <section class="ftco-section contact-section">
                <div class="container">
                    <div class="row block-9" style="text-align:center">
                        <h1>You Tried to Access page not found </h1>
                        <h2>if you entered agian you will be blocked </h2>
                    </div>
                </div>
             </section>
        </div>
    }
    else
    {
    <div id="colorlib-main">
        <section class="ftco-section contact-section">
            <div class="container">
                <div class="row block-9">
                    <div class="col-md-12 order-md-last pr-md-5">
                        <form class="wrap-form-reservation size22 m-l-r-auto" method="post" enctype="multipart/form-data" asp-controller="WeddingHalls" asp-action="EditWedd">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="ID" />

                            <div class="form-group">
                                <!-- Name -->
                                <label asp-for="Name">Name</label>
                                <input asp-for="Name" class="form-control" placeholder="Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <!-- Phone Number -->
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="PhoneNumber">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <!-- Price -->
                                <label asp-for="Hall_Price" class="txt9">enter your Hall price</label>
                                <input asp-for="Hall_Price" class="form-control" placeholder="price LE">
                                <span asp-validation-for="Hall_Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <!-- Address -->
                                <label asp-for="Address" class="txt9">enter your Address</label>
                                <input asp-for="Address" class="form-control" placeholder="Adress">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="HallType" class="txt9">Hall Type</label>
                                <select asp-for="HallType" class="form-control">
                                    <option>Club</option>
                                    <option>Restaurant</option>
                                    <option>Hotel</option>
                                    <option>villa</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label asp-for="OtherServices" class="txt9">Other services</label>
                                <select asp-for="OtherServices" class="form-control">
                                    <option>Car Parking</option>
                                    <option>Meals</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <!-- Address -->
                                <label asp-for="Capacity" class="txt9">enter your Address</label>
                                <input asp-for="Capacity" class="form-control" type="number" min="200" placeholder="Max capacity">
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <!-- ImgPath -->
                                <label asp-for="Hall_ImgPath" class="txt9">your Image Cover </label>
                                <input asp-for="Hall_ImgPath" class="form-control" placeholder="your Image Path ">
                                <span asp-validation-for="Hall_ImgPath" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFilePath" class="txt9"></label>
                                <input type="file" asp-for="ImageFilePath" class="bo-rad-10 sizefull txt10 p-l-20" />
                                <span asp-validation-for="ImageFilePath" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ImageFilePathAlbum" class="control-label"></label>
                                <input type="file" asp-for="ImageFilePathAlbum" class="form-control" multiple />
                                <span asp-validation-for="ImageFilePathAlbum" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TestDate"></label>
                                <input type="text" class="form-control date" asp-for="TestDate" placeholder="Pick the multiple dates" id="inputDate">
                            </div>
                            <div class="form-group">
                                <!-- Description -->
                                <label asp-for="Offers">Enter your Offer Description</label>
                                <textarea asp-for="Offers" class="form-control" placeholder="Enter your info more about you"></textarea>
                            </div>
                            <div class="form-group">
                                <!-- Message -->
                                <a asp-controller="WeddingHalls" asp-action="ChangePassword">
                                    <button type="button" class="btn btn-danger">
                                        Chang password
                                    </button>
                                </a>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Edit" class="btn btn-primary py-3 px-5">
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </section>
    </div>

    }
    }

@section Scripts{
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src='https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.3.0/js/bootstrap-datepicker.js'></script>
    <script src="~/Calendar/script.js"></script>
}
