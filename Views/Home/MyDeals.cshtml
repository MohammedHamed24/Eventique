<div class="row justify-content-center mb-5 pb-2" style="margin-top:100px;">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <strong class="card-title">Deals With Photographers</strong>
            </div>
            <div class="table-stats order-table ov-h">
                <table class="table ">
                    <thead>
                        <tr>
                            <th class="serial">Request ID</th>
                            <th class="avatar">Avatar</th>
                            <th>Name</th>
                            <th>Date</th>
                            <th>Price</th>
                            <th>Offer Title</th>
                            <th>Message</th>
                            <th>Request Time</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>

                        @{ foreach (var item in ViewData["phoRequest"] as List<Eventique.Models.PhotographerRequest>)
                            {
                                <tr>
                                    <td class="serial">@item.ID</td>
                                    <td class="avatar">
                                        <div class="round-img">
                                            <a href="#"><img class="rounded-circle" src="@item.RequestPhotographer.ImagePath" alt=""></a>
                                        </div>
                                    </td>
                                    <td>@item.RequestPhotographer.Ph_Name</td>
                                    <td>  <span class="name">@item.Date</span> </td>
                                    <td> <span class="product">@item.PriceOffer.OffersPrice $</span> </td>
                                    <td> <span class="product">@item.PriceOffer.OfferTitle $</span> </td>
                                    <td><span class="count">@item.Message</span></td>
                                    <td><span class="count">@item.Time</span></td>
                                    <td>
                                        <span class="badge badge-complete">@item.Status</span>
                                    </td>
                                    <td>
                                        <a href="javascript:void(0);" id="showdeleteDesignerModal" class="deletepho" data-toggle="modal">
                                            <span><i class="fa fa-remove" style="font-size:30px"></i></span>
                                        </a>
                                        <input type="hidden" class="id" value="@item.ID" />
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
                <p class="text-danger" style="text-align:center">@TempData["msg"]</p>
            </div>
        </div>
    </div>
</div>

