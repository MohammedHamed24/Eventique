    <script src="~/myDeals/js/owl.carousel.min.js"></script>
    <script src="~/myDeals/js/main.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnShowModal").click(function () {
                $("#ModalCreate").modal('show');
            });

            $("#OfferEndDate").datepicker({
                minDate: 0
            });

            $(".deletepho").click(function () {
                $("#ModalDeletePho").modal('show');
            });

            $(".deletedesi").click(function () {
                $("#ModalDeleteDesi").modal('show');
            });

            $(".deletewedd").click(function () {
                $("#ModalDeleteWedd").modal('show');
            });

            $('table .deletepho').on('click', function () {
                var id = $(this).parent().find('.id').val();
                $("#ModalDeletePho #ID").val(id);
            });

            $('table .deletedesi').on('click', function () {
                var id = $(this).parent().find('.id').val();
                $("#ModalDeleteDesi #ID").val(id);
            });

            $('table .deletewedd').on('click', function () {
                var id = $(this).parent().find('.id').val();
                $("#ModalDeleteWedd #ID").val(id);
            });


        });
    </script>

